{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Vue.js specific */
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./.vuepress/*"
      ]
    }
  },
  "include": [
    ".vuepress/**/*.ts",
    ".vuepress/**/*.d.ts",
    ".vuepress/**/*.tsx",
    ".vuepress/**/*.vue"
  ],
  "exclude": [
    ".vuepress/utils/*.ts"
  ]
}